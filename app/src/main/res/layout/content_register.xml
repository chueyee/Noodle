<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chueyee.noodle.Register"
    tools:showIn="@layout/activity_register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleTV"
        android:text="Register"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#0cdbf2"
        android:textIsSelectable="false"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailET"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Enter UCM Email"
        android:textColor="#0cdbf2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleTV"
        android:layout_marginTop="75dp"
        style="@style/MyTextViewStyle"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/passwordET"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#0cdbf2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/emailET"
        android:layout_marginTop="25dp"
        style="@style/MyTextViewStyle"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/confirmET"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Confirm Password"
        android:textColor="#0cdbf2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passwordET"
        android:layout_marginTop="25dp"
        style="@style/MyTextViewStyle"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerBtn"
        android:layout_below="@+id/confirmET"
        android:layout_alignLeft="@+id/confirmET"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelBtn"
        android:layout_below="@+id/confirmET"
        android:layout_alignRight="@+id/confirmET"
        android:layout_marginRight="25dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape"/>
</RelativeLayout>
